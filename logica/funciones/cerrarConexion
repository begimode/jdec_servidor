// -*- javascript -*-

// --------------------------------------------------------------------------------
// cerrarConexion
// --------------------------------------------------------------------------------

// ----------------------------------------------------------------------------
//            cerrarConexion() -->
// ----------------------------------------------------------------------------
module.exports = async function cerrarConexion( ) {
		
		return new Promise( (resolver, rechazar) => {
			cerrarConexion.conexion.close( (err)=>{
				( err ? rechazar(err) : resolver() )
			})
		})

} // ()


